<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/list_store_image"
        android:layout_width="98dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#00000000"
        android:src="@drawable/store_image"/>
    <TextView
        android:id="@+id/list_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="GS_산격점"
        android:layout_toRightOf="@id/list_store_image"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/list_store_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 정말 좋으 위치에 있는 상점 인디용&#10;위치 : 산격동 홍길동 22번지"
        android:layout_marginTop="4dp"
        android:layout_below="@id/list_store_name"
        android:layout_alignLeft="@id/list_store_name"/>
    <ImageView
        android:id="@+id/list_store_opt"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"/>
</RelativeLayout>