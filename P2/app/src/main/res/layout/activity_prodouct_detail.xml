<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreDetailActivity">

    <RelativeLayout
        android:id="@+id/detail_product_head"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:background="@android:color/holo_red_dark"></RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_product_recyclerview"
        android:layout_below="@+id/detail_product_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>